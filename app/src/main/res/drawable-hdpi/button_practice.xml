<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:type="linear"
                android:centerX="27%"
                android:startColor="#0000ddff"
                android:centerColor="#00009BDB"
                android:endColor="#B2009BDB"
                android:angle="315"/>
            <corners
                android:radius="8sp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#ffffffff" />
            <corners
                android:radius="8sp" />
        </shape>
    </item>
</selector>