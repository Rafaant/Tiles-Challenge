<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:clickable="false"
    android:background="@android:color/white"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Large Text"
        android:id="@+id/mode"
        android:layout_gravity="left"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_margin="10sp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/points"
        android:layout_gravity="left"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/mode"
        android:layout_alignParentLeft="true"
        android:id="@+id/tvPoints1"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:id="@+id/easyPoints"
        android:layout_weight="1"
            android:textColor="@android:color/black"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvPoints1"
        android:layout_marginLeft="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fácil"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mode"
        android:id="@+id/tvEasy"
        android:layout_marginTop="22sp"
        android:textAllCaps="true"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/level"
        android:layout_gravity="left"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/mode"
        android:id="@+id/tvLevel1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:id="@+id/easyLevel"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@android:color/black"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvLevel1"
        android:layout_marginRight="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/points"
        android:layout_gravity="left"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/easyPoints"
        android:layout_alignParentLeft="true"
        android:id="@+id/tvPoints2"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Large Text"
        android:id="@+id/hardPoints"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tvPoints2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="10sp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Difícil"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvHard"
        android:layout_below="@+id/tvEasy"
        android:layout_marginTop="32sp"
        android:textAllCaps="true"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/level"
        android:layout_gravity="left"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/easyLevel"
        android:id="@+id/tvLevel2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:id="@+id/hardLevel"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@android:color/black"
        android:layout_below="@+id/tvLevel2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp" />

</RelativeLayout>