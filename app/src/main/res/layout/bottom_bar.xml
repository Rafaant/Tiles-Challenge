<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15sp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/info"
        android:id="@+id/tvInfo"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="visible"
        android:layout_alignParentTop="false"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_above="@+id/bottomBarMessage"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/bottomBarMessage"
        android:layout_gravity="center"
        android:gravity="left"
        android:visibility="invisible"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_alignParentBottom="true"
        android:maxLines="1"
        android:maxWidth="120sp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/points"
        android:id="@+id/tvPoints1"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="visible"
        android:layout_alignParentTop="false"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/points" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/points"
        android:layout_gravity="center"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/bonus"
        android:id="@+id/bottomBarBonus"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignParentBottom="false"
        android:layout_above="@+id/bottomBarExtra" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/bottomBarExtra"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true" />

</RelativeLayout>