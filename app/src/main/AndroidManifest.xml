<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.creativefunapps.tileschallenge" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true" >

        <!-- Google Analytics Version v4 needs this value for easy tracking -->
        <meta-data
            android:name="com.google.android.gms.analytics.globalConfigResource"
            android:resource="@xml/global_tracker" />

        <!-- Valores para Google Play Games Leaaderboards -->
        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity
            android:name=".SplashTitle"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".Game"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name=".Score"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_score" >
        </activity>
        <activity
            android:name=".Archievement"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_score" >
        </activity>
        <activity
            android:name=".Help"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name=".Preferences"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_preferences"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Advertisement"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:label="@string/title_activity_advertisement" >
        </activity>
        <activity
            android:name=".Results"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_results" >
        </activity>
    </application>

</manifest>
